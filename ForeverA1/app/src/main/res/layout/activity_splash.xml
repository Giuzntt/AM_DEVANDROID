<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".SplashActivity">
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/splash_bg">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/pbSplash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_marginStart="@dimen/margin_side_big"
            android:layout_marginEnd="@dimen/margin_side_big"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/margin_top_splash"
            android:backgroundTint="@color/white"
            app:trackThickness="@dimen/progress_thickness"
            app:trackCornerRadius="@dimen/radius_small"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>